<div class="container">
    <div class="form-group">
        <%= form_for @user, url: user_user_path do |f| %>
        <% if @user.errors.any? %>
            <% @user.errors.full_messages.each do |message| %>
                <div class="error">
                    <%= message %>
                </div>
            <% end %>
        <% end %>
        <div class="mb-4">
            <h4>プロフィール画像を変更</h4>
        </div>
        <div class="mb-4">
            <%= f.attachment_field :profile_image %>
        </div>
        <div class="mb-4">
            <h4>名前を入力</h4>
        </div>
        <div class="mb-4">
            <%= f.text_field :name,class:"form-control" %><br>
        </div>
        <div class="mb-4">
            <h2>自己紹介を入力</h2>
        </div>
        <div class="mb-4">
            <%= f.text_area :introduction,class:"form-control" %><br>
        </div>
        <div class="">    
            <%= f.submit "プロフィールを更新", class: "btn btn-success form-control" %>
        </div>
        <% end %>
    </div>
</div>