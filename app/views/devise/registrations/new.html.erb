<div class="container">
  <div class="row m-5">
    <h2>会員登録</h2>
  </div>
    <%# 新規登録のためのフォーム %>
<div class="form-group">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="row m-5">
          <%= f.text_field :name, placeholder: "名前を入力してください", class: "form-control" %>
      </div>
      <div class="row m-5">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレスを入力してください", class: "form-control" %>
      </div>
      <div class="row m-5">
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "パスワード（６文字以上）" %>
      </div>
      <div class="row m-5">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "パスワード（再確認）" %>
      </div>
      <div class="row m-5">
          <%= f.submit "会員登録をする" , class: "form-control btn-success" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
    </div>
    </div>