<!DOCTYPE html>
<html>
  <head>
    <title>Target</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <% if user_signed_in? %> 
    <header class="navbar navbar-inverse header mb-5">
      <div class="container-fluid">
        <nav class="nav navbar-nav navbar-left">
            <div class="navbar-brand"><%= link_to "Target", root_path,class: "title" %></div>
        </nav>
        <nav>
          <ul class="nav navbar-right">
            <li><%= link_to "ユーザー一覧",user_users_path,class:"link" %></li>
            <li><%= link_to "目標を投稿する",new_user_objective_path,class:"link" %></li>
            <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete,class:"link" %></li>
          </ul>
        </nav>
      </div>
    </header>
    <% else %>
    <nav class="navbar navbar-inverse header mb-5">
      <div class="container-fluid">
        <div class="navbar-header">
          <div class="navbar-brand"><%= link_to "Target", root_path %></div>
        </div>
        <ul class="nav navbar-nav link-parent">
          <li><%= link_to "新規登録",new_user_registration_path,class:"link" %></li>
        </ul>
      </div>
    </nav>
    <% end %>
    <%= yield %>
  </body>
</html>
